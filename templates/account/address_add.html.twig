{% extends 'base.html.twig' %}

{% block title %} Gerer mes adresses {% endblock %}

{% block content %}
<div>
<h1> Gerer mes adresses</h1>
<a class="btn btn-info mb-3" href="{{ path('account_address')}}"> Retour </a>

{{ form_start(form)}}
    <div class="row">
        <div class="col-md-12">
            {{form_row(form.name)}}
        </div>
        
        <div class="col-md-6">
            {{form_row(form.firstname)}}
        </div>
        <div class="col-md-6">
            {{form_row(form.lastname)}}
        </div>
        <div class="col-md-12">
            {{form_row(form.company)}}
        </div>
        <div class="col-md-6">
            {{form_row(form.phone)}}
        </div>
        <div class="col-md-6">
            {{form_row(form.city)}}
        </div>
        <div class="col-md-6">
            {{form_row(form.postal)}}
        </div>
    </div>
{{ form_end(form)}}


</div>

{% endblock %}
