{% extends 'base.html.twig' %}

{% block title %}Les produits {% endblock %}

{% block content %}


<div>
    <div class="row">
        <div class="col-md-3">
            <h3> Filtres </h3>
            {{form(form)}}
        </div> 

        <div class=" col-md-9">
            <h3 class="">Nos Produits</h3>

            <div class="product-items">
                {% for product in products %}
                    <div class="product-item text-center">
                        <h5>{{product.name}} </h5>
                        <span class="product-subtitle">{{ product.subtitle}} </span>
                        <a href="{{path ('name_product', {'slug': product.slug})}}"><img src="/uploads/{{ product.illustration }}" alt="{{ product.name}}" class="img-fluid"/></a>
                        <span class="product-price">{{ product.price / 100 | number_format(2)}} â‚¬ </span>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
